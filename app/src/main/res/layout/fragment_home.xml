<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Home page"
        android:textSize="30sp"
        android:textColor="#37474f"
        android:layout_marginStart="40dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_below="@id/Home"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#37474f"
        android:layout_marginTop="30dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="AK"
            android:textSize="60sp"
            android:textColor="#fff"
            android:layout_gravity="center"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:text="Android Developers"
        android:textSize="20sp"
        android:textColor="#37474f"
        android:layout_marginTop="90dp"
        android:layout_marginStart="40dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/androidTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/android"
        android:text="Android Software developer is the process by which new application are created for device running the android operating system"
        android:textSize="15sp"
        android:textColor="#37474f"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"/>


</RelativeLayout>